set clipboard+=unnamedplus

" save undo-trees to file
set undofile
set undodir=$HOME/.config/nvim/undo
set undolevels=100
set undoreload=100

" set line numbers
set number

" use 4 spaces instead of tab
" copy indent from current line when starting a new line
set autoindent
set expandtab
set tabstop=4
set softtabstop=4
set shiftwidth=4

